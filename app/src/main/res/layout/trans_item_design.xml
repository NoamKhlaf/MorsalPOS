<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
      android:padding="3dip" >
   
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="5dip"
        >
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        >


         <TextView
         android:id="@+id/pan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="PAN: 22223343455666777"

         android:textColor="@color/colorPrimaryDark"
         android:layout_alignParentLeft="true"
         android:gravity="left"/>


 <View 
     android:layout_width="fill_parent"
     android:layout_height="1dip"
     android:background="#e6e6e6"
     android:layout_below="@+id/pan"
     android:layout_marginTop="5dip"  />
</RelativeLayout>


 <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       
        >
 
<LinearLayout 
    android:id="@+id/lin_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: 200 SDG"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
             />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
             android:textColor="@color/colorPrimaryDark"
            android:text="Exp Date: JUN 2017"
            android:layout_centerVertical="true"            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e6e6e6"
            android:layout_below="@+id/date"
            android:layout_marginTop="5dip"  />
    </RelativeLayout>

</LinearLayout>


     <TextView
         android:id="@+id/trans"
         android:layout_below="@+id/lin_status"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Trans: TOPUP"
         android:paddingTop="4dip"
         android:paddingBottom="3dip"
         android:textSize="15dip"
         android:gravity="left"
         />




 </RelativeLayout>
</LinearLayout>
</RelativeLayout>